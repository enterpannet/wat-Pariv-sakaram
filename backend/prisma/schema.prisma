// schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id                Int     @id @default(autoincrement())
    name              String
    lastName          String
    age               Int
    monasticYears     Int?
    templeAffiliation String
    province          String
    phoneNumber       String
    chronicIllness    String?
    isActive          Boolean @default(false)
}
